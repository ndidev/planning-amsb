{
  "require": {
    "phpmailer/phpmailer": "^6.2",
    "setasign/tfpdf": "^1.32",
    "vlucas/phpdotenv": "^5.3",
    "psr/log": "^3.0"
  },
  "require-dev": {
    "symfony/var-dumper": "^7.0",
    "phpunit/phpunit": "^11.4",
    "phpro/grumphp": "^2.8",
    "phpstan/phpstan": "^1.12"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit tests --testdox  --coverage-html public/tests"
  },
  "config": {
    "allow-plugins": {
      "phpro/grumphp": true
    }
  }
}
